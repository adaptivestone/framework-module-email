{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true,
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"]
}
